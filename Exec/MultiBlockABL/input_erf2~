# ------------------  INPUTS TO MAIN PROGRAM  -------------------

# PROBLEM SIZE & GEOMETRY
erf2.prob_lo = 0. 0. 0.
erf2.prob_hi = 1000. 1000. 1000.
erf2.n_cell  =    48     48     48
erf2.ref_ratio   = (2,2,2)

erf2.is_periodic = 1 1 0
erf2.zlo.type = "SlipWall"
erf2.zhi.type = "SlipWall"

# TIME STEP CONTROL
erf2.use_native_mri     = 1
erf2.fixed_dt           = 0.1  # fixed time step depending on grid resolution

# DIAGNOSTICS & VERBOSITY
erf2.sum_interval   = 1       # timesteps between computing mass
erf2.v              = 1       # verbosity in ERF.cpp

# CHECKPOINT FILES
erf2.check_file      = erf2_chk        # root name of checkpoint file
erf2.check_int       = -1        # number of timesteps between checkpoints

# PLOTFILES
erf2.plot_file_1     = erf2_plt        # prefix of plotfile name
erf2.plot_int_1      = 5         # number of timesteps between plotfiles
erf2.plot_vars_1     = density rhoadv_0 x_velocity y_velocity z_velocity pressure temp theta

# SOLVER CHOICE
erf2.alpha_T = 0.0
erf2.alpha_C = 1.0
erf2.use_gravity = false
erf2.use_coriolis         = false
erf2.use_rayleigh_damping = false

erf2.molec_diff_type = "None"
erf2.les_type        = "None"
erf2.Cs              = 0.1

erf2.spatial_order = 2

# PROBLEM PARAMETERS
prob.rho_0 = 1.161440171
prob.Theta0 = 300.0
prob.use_bubble = 1
prob.bubble_loc_x = 250
prob.bubble_loc_y = 500
prob.bubble_loc_z = 500
prob.bubble_radius = 125
prob.bubble_temp_ratio = 1.05

prob.A_0 = 1.0

prob.U_0 = 10.0
prob.V_0 = 0.0
prob.W_0 = 0.0

# Higher values of perturbations lead to instability
# Instability seems to be coming from BC
prob.U_0_Pert_Mag = 0.0
prob.V_0_Pert_Mag = 0.0 #
prob.W_0_Pert_Mag = 0.0
